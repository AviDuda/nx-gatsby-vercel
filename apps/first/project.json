{
  "name": "first",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/first/src",
  "projectType": "application",
  "targets": {
    "copy-data": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "clean-data"
      ],
      "options": {
        "cwd": "apps/first/",
        "commands": [
          "find ../.. -name 'gatsby-*' -depth 1 -exec cp '{}' . \\;"
        ]
      }
    },
    "clean-data": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/first/",
        "commands": [
          "rm -f gatsby-*"
        ]
      }
    },
    "clean-gatsby": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/first/",
        "command": "rm -rf .cache/ public/"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["copy-data"],
      "options": {
        "cwd": "apps/first/"
      },
      "defaultConfiguration": "remote",
      "configurations": {
        "remote": {
          "commands": [
            "gatsby develop"
          ]
        },
        "local": {
          "commands": [
            "gatsby develop"
          ]
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "copy-data"
      ],
      "options": {
        "cwd": "apps/first/",
        "outputPath": "apps/first/public"
      },
      "defaultConfiguration": "dev-remote",
      "configurations": {
        "dev-remote": {
          "commands": [
            "gatsby build"
          ]
        },
        "dev-local": {
          "commands": [
            "gatsby build"
          ]
        },
        "production-remote": {
          "commands": [
            "gatsby build"
          ]
        },
        "production-local": {
          "commands": [
            "gatsby build"
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:file-server",
      "defaultConfiguration": "dev-remote",
      "options": {
        "port": 8000
      },
      "configurations": {
        "dev-remote": {
          "buildTarget": "first:build:dev-remote"
        },
        "dev-local": {
          "buildTarget": "first:build:dev-local"
        },
        "production-remote": {
          "buildTarget": "first:build:production-remote"
        },
        "production-local": {
          "buildTarget": "first:build:production-local"
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit -p apps/first/tsconfig.app.json",
          "tsc --noEmit -p apps/first/tsconfig.spec.json"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/first/**/*.{ts,tsx,js,jsx}"],
        "rulesdir": ["./node_modules/gatsby/dist/utils/eslint-rules"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/first/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:client"]
}
